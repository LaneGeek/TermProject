@model LoginViewModel

<h1>Login</h1>

<p>
    Please enter your email and password below.
</p>

<form asp-action="Login" method="post">
    <div class="lead text-warning" asp-validation-summary="All"></div>
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
    </div>
    <button class="btn btn-primary btn-lg" type="submit">Login</button>
</form>

<p>
    <br />If you do not have an account then please register.
</p>

<p>
    <a class="btn btn-primary btn-lg" asp-action="Register" role="button">Register</a>
</p>
