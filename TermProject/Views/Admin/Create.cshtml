@model CreateUserViewModel

<h1>Create New User</h1>

<p>
    To create a new user fill in the form below.
</p>

<form asp-action="Create" method="post">
    <div class="lead text-warning" asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Password">Password</label>
        <input class="form-control" asp-for="Password">
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Create</button>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
</form>
