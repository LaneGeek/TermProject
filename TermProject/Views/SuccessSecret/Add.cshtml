@model SuccessSecret

<h1>Submit The Secret Of Your Success</h1>

<p>
    Please fill out the information below.
</p>

<form asp-action="Add" method="post">
    <div class="lead text-warning" asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Success">Success Achieved</label>
        <input class="form-control" asp-for="Success">
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Secret">The Secret You Wish To Share</label>
        <input class="form-control" asp-for="Secret">
    </div>
    <input type="submit" class="btn btn-primary btn-lg" value="Submit" />
</form>
