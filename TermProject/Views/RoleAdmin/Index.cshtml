@model IEnumerable<IdentityRole>

<h1>Roles</h1>

<div asp-validation-summary="ModelOnly"></div>

<table class="table">
    <thead>
    <tr class="table-success">
        <th>Role Name</th>
        <th>Id</th>
        <th></th>
    </tr>
    </thead>

    <tbody>

    @{
        foreach (var role in Model)
        {
            <tr class="table-primary">
                <td>@role.Name</td>
                <td>@role.Id</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Manage @role.Name</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete Role</button>
                    </form>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

<a class="btn btn-primary btn-lg" asp-action="Create">Create New Role</a>
