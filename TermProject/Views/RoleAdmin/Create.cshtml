@model string

<h1>Create New Role</h1>

<p>
    To create a new role fill in the form below.
</p>

<form asp-action="Create" method="post">
    <div class="lead text-warning" asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" for="name">Role Name</label>
        <input class="form-control" name="name">
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Create</button>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
</form>
